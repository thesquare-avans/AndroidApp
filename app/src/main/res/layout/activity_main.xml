<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.thesquare.MainActivity">
    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onCaptureClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/switchcam"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:id="@+id/btnSwitch"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <ListView
        android:layout_height="220dp"
        android:foregroundGravity="bottom|left"
        android:layout_width="220dp"
        android:id="@+id/lvChat"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:layout_above="@+id/chatinput"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <EditText
        android:id="@+id/chatinput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Chat here..."
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="chat"
        android:onClick="AddChat"
        android:layout_alignBaseline="@+id/chatinput"
        android:layout_alignBottom="@+id/chatinput"
        android:layout_alignEnd="@+id/btnSwitch" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/borderwhiteeye"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/viewCounter" />

    <TextView
        android:id="@+id/viewCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSwitch"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="45dp"
        android:gravity="center_vertical"
        android:shadowColor="#000000"
        android:clickable="false"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="123456"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>