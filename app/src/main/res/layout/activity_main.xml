<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:keepScreenOn="true"
    tools:context="me.thesquare.MainActivity">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onCaptureClick" />


    <ListView
        android:layout_height="220dp"
        android:foregroundGravity="bottom|left"
        android:layout_width="220dp"
        android:id="@+id/lvChat"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:layout_above="@+id/chatinput"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <EditText
        android:id="@+id/chatinput"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:hint="@string/chat_placeholder"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lvChat"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:text="EXIT" />
    <Button
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/chatinput"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-5px"
        android:layout_toEndOf="@+id/chatinput"
        android:onClick="AddChat"
        android:text=">"
        android:textSize="60px"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        app:srcCompat="@drawable/borderwhiteeye" />

    <TextView
        android:id="@+id/viewCounter"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/txtSatosi"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="40dp"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="69"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgSatosi"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:paddingBottom="5dp"
        app:srcCompat="@drawable/image" />

    <TextView
        android:id="@+id/txtSatosi"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/viewCounter"
        android:layout_alignStart="@+id/viewCounter"
        android:layout_below="@+id/imageView"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="420"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Chronometer
        android:id="@+id/stopWatch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textSize="20sp" />

    <View
        android:id="@+id/seperator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/txtSatosi"
        android:background="@android:color/darker_gray" />
</RelativeLayout>